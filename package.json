{
  "name": "stacker",
  "version": "0.1.0",
  "description": "Polyglot flow GUI testing tool",
  "author": {
    "name": "Virgs",
    "email": "guilherme.moraes@outlook.com",
    "url": "http://github.com/virgs"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/virgs/carabina"
  },
  "private": true,
  "scripts": {
    "test": "npm run lint && npm run test:unit",
    "test:unit": "NODE_ENV=test node_modules/.bin/vue-cli-service test:unit",
    "lint": "node_modules/.bin/vue-cli-service lint",
    "electron:build": "node_modules/.bin/vue-cli-service electron:build",
    "electron:serve": "node_modules/.bin/vue-cli-service electron:serve",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "main": "background.js",
  "dependencies": {
    "@types/require-from-string": "^1.2.0",
    "@types/yamljs": "^0.2.30",
    "bootstrap-vue": "^2.6.1",
    "electron-store": "^5.1.1",
    "enqueuer": "^5.1.4",
    "fix-path": "^3.0.0",
    "require-from-string": "^2.0.2",
    "split.js": "^1.5.11",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.3",
    "vue-codemirror": "^4.0.6",
    "vue-highlightable-input": "^1.0.9",
    "vue-property-decorator": "^8.3.0",
    "vuex": "^3.1.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "@vue/cli-plugin-eslint": "^4.2.3",
    "@vue/cli-plugin-typescript": "^4.2.3",
    "@vue/cli-plugin-unit-jest": "^4.2.3",
    "@vue/cli-plugin-vuex": "^4.2.3",
    "@vue/cli-service": "^4.2.3",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "1.0.0-beta.31",
    "electron": "^6.1.9",
    "electron-icon-builder": "^1.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "shebang-loader": "0.0.1",
    "typescript": "~3.7.5",
    "vue-cli-plugin-electron-builder": "^1.4.6",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-ignore": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "no-explicit-any": "off",
      "ban-ts-ignore": 0
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/src/**/*.spec.ts"
    ],
    "preset": "@vue/cli-plugin-unit-jest/presets/typescript",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.spec.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "functions": 95,
        "lines": 95
      }
    },
    "coverageReporters": [
      "html",
      "text-summary"
    ]
  }
}
